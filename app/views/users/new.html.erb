<div class="cover-container">
	<h1 class="h1">Sign up now to enter!</h1>

	<%= form_for @user do |f|  %>

		<% if @user.errors.any? %>
			<div>
				<h4><%= pluralize(@user.errors.count, "error") %> prevented you from signing up for an account:</h4>

				<ul>
					<% @user.errors.full_messages.each do |msg| %>
						<li class="list-group-item list-group-item-danger"><%= msg.downcase %> </li>
					<% end %>
				</ul>
			</div>
		<% end %>



		<div class="login">
			<%= f.label :name %>
			<%= f.text_field :name %>

			<br>
		
			<%= f.label :email %>
			<%= f.text_field :email %>

			<br>
		
			<%= f.label :password %>
			<%= f.password_field :password %>

			<br>
		
	    	<%= f.label :password_confirmation %>
	    	<%= f.password_field :password_confirmation %>
		
	    	

			<button><%= link_to "Login" %></button>

			<button><%= link_to "Go Back", home_path %></button>

		</div>

	<% end %>

</div> <!-- end signup-container -->

