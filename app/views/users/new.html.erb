<h1>This will be the user signup screen</h1>

	<%= form_for @user do |f|  %>

		<% if @user.errors.any? %>
			<div>
				<h4 class="text-danger"><%= pluralize(@user.errors.count, "error") %> prevented you from signing up for an account:</h4>

				<ul class="list-group">
					<%= @user.errors.full_messages.each do |msg| %>
						<li class="list-group-item list-group-item-danger"><%= msg.downcase %> </li>
					<% end %>
				</ul>
			</div>
		<% end %>



	<div class="form-group">
		<%= f.label :name %>
		<%= f.text_field :name %>
	</div>

	<div class="form-group">
		<%= f.label :email %>
		<%= f.text_field :email %>
	</div>

	<div class="form-group">
		<%= f.label :password %>
		<%= f.password_field :password %>
	</div>

	<div class="form-group">
    	<%= f.label :password_confirmation %>
    	<%= f.password_field :password_confirmation %>
	</div>


	<%= f.submit "Login" %>

	<%= link_to "Go Back", home_path %>

	<% end %>

