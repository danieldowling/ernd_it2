<h1>Edit your Post!</h1>

<%= form_for :post do |f| %>

	<div>
		<%= f.label :description %>
		<%= f.text_field :description %>
	</div>

	<div>
		<%= f.label :image_url %>
		<%= f.file_field :image_url %>
	</div>

	<%= f.submit "Submit Changes?" %>

<% end %>

<%= link_to "Click to Return Home!", posts_path %>