<div id="edit-post-controller">

	<h1 class="h1">Edit your Post!</h1>

	<!-- <%= "Earned status: #{@post.earned}"%> -->

	<%= form_for :post do |f| %>


		<div class="edit">
			<section>

				<%= f.label :description %>
				<%= f.text_field :description %>
				
				<br>

				<%= f.label :image_url %>
				<%= f.file_field :image_url %>

				<br>

			</section>
		
		

			<button>
				<%= f.submit "Submit Changes" %>
			</button>
		
			<button><%= link_to "Delete Post", post_path, method: :delete, data: {confirm: "Are you sure you wish to delete this post?"} %></button>

			<% end %>

			<button><%= link_to "Click to Return Home", posts_path %></button>
		</div> <!-- end edit -->

</div> <!-- edit-post-controller -->