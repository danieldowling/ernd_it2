<div class="container-fluid">
	<div class="row">
		<% if logged_in? %>

			<%= "Welcome #{current_user.name}!" %>
			<%= link_to 'Log Out', logout_path, method: :delete %>

		<% end %>
	</div> <!-- end row -->

	<div class="jumbotron">

		<h1>WHAT WILL YOU EARN TODAY?</h1>

		<%= link_to "Create new Post!", new_post_path %>

    </div> <!-- end jumbotron -->
	
   


		<div class="row">
			<ul>
				<% @posts.each do |post| %>
					
					<li>
						<div class="col-lg-4">
							<strong> <%= post.user.name %> </strong> <br>
						</div>

						<div class="col-lg-8">
						
								<strong> <%= image_tag post.image_url, :class => "earned-#{post.earned}" %> </strong> <br>
						
						
							<strong> <%= post.description %> </strong> <br>
							<%= link_to "Add Comment", post_path(post) %>
						

						
							<% if can_edit(post) %>
								<%= link_to "Edit Post?", edit_post_path(post) %> 
								<%= link_to "ERND IT", earn_post_path(post) %>
							<% end %>

						</div>
						
					</li>

				<% end %>
			</ul>
		</div>
	

</div> <!-- end container-fluid -->