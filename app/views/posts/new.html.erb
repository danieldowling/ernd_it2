<div id="new-post-controller">

	<h1 class="h1">Add a Post Here!</h1>

	<%= form_for @post do |f| %>

		<div class="new">
			<p>What is your goal?</p><% f.label :description %>
			<%= f.text_field :description %>
		
		<br>
		<br>

			<p>What would you like to earn?</p><% f.label :image_url %>
			<%= f.file_field :image_url %>

		<br>
		<br>
		

		<button><%= f.submit "Add Post" %></button>

		<button><%= link_to "Back to Home Page", posts_path %></button>

		</div>

	<% end %>


</div> <!-- end new-post-controller -->